<% layout('/layouts/boilerplate') -%>

<div class="payment-container">
   
    <h1>Payment Method</h1>


    <form action="/payment/process" method="POST">
        <!-- Credit/Debit Card Payment Fields -->
        <div id="credit-debit-fields">
            <h2>Credit/Debit Card Payment</h2>
            <label for="card-number">Card Number:</label>
            <input type="text" id="card-number" name="card-number" required>
            <br><br>
            <label for="card-expiry">Expiry Date (MM/YY):</label>
            <input type="text" id="card-expiry" name="card-expiry" required>
            <br><br>
            <label for="card-cvc">CVC:</label>
            <input type="text" id="card-cvc" name="card-cvc" required>
        </div>

        <br>
      
        <input type="hidden" name="mentorId" value="<%= mentorId %>">
        <input type="hidden" name="startTime" value="<%= startTime %>">
        <input type="hidden" name="endTime" value="<%= endTime %>">
        <input type="hidden" name="additionalCharge" value="<%= additionalCharge %>">
    
        <button type="submit" class="pay-button">Pay</button>
    </form>
</div>

<style>
    .payment-container {
        max-width: 600px;
        margin: auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
    }
    
    #credit-debit-fields {
        margin-top: 20px;
    }

    .pay-button {
        padding: 10px 20px;
        font-size: 16px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .pay-button:hover {
        background-color: #0056b3;
    }
</style>
